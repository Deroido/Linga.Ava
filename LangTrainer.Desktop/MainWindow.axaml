
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LangTrainer.Desktop.Views.MainWindow"
        Width="460"
        Height="260"
        Title="LangTrainer"
        WindowStartupLocation="CenterScreen"
        Background="#1E2126"
        FontFamily="Candara">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="30"
                Height="30"
                FontSize="21"
                Content="âŸ³"
                ToolTip.Tip="Reload decks"
                Click="ReloadDecks_Click"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="10">
            <TextBlock Text="LangTrainer"
                       FontSize="33"
                       FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock Text="Background trainer is active"
                       FontSize="21"
                       Foreground="#B8C0CC"/>
            <Button Content="Open Popup (Test)"
                    Width="180"
                    FontSize="18"
                    Click="OpenPopup_Click"/>
            <TextBlock x:Name="DiagnosticsText"
                       Width="380"
                       FontSize="18"
                       Foreground="#9AA7B3"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
