
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LangTrainer.Desktop.Views.MainWindow"
        Width="420"
        Height="240"
        Title="LangTrainer"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="32"
                Height="32"
                FontSize="16"
                Content="âŸ³"
                ToolTip.Tip="Reload decks"
                Click="ReloadDecks_Click"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="12">
            <TextBlock Text="LangTrainer is running"
                       FontSize="20"/>
            <TextBlock Text="Avalonia desktop lifecycle OK"
                       FontSize="14"/>
            <Button Content="Open Popup (Test)"
                    Width="180"
                    Click="OpenPopup_Click"/>
            <TextBlock x:Name="DiagnosticsText"
                       Width="360"
                       FontSize="12"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
